<div class="header">
  <img src="assets/img/burgerpic.jpg" alt="pic" />
  <h1>Eat-Da-Burger!</h1>
</div>

<div class="row">
  <div class="col">
    <h2>Not Eaten</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour" data-id="{{id}}">DEVOUR!!!</button>
        </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col">
    <h2>Eaten</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="theform">
  <h2>Add a Burger!</h2>
  <form class="insert-form">

    <div class="form-group">
      <input type="text" id="addBurg" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>


